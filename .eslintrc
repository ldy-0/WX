{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6 
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "rules": {
    "strict": [
      0
    ],
    "semi": [ 2, "always" ],
    "eol-last": 0,
    "no-mixed-operators": 0,
    "no-await-in-loop": 0,
    "camelcase": 0,
    "no-loop-func": 0,
    "no-trailing-spaces": 0,
    "consistent-return": 0,
    "new-cap": 0,
    "no-empty": 0,
    "yoda": 0,
    "no-new-func": 0,
    "no-console": [2, {
      "allow": ["log", "error", "warn", "info", "time", "timeEnd"]
    }],
    "no-extra-parens": [ 2, "all",
      {
        "conditionalAssign": true,
        "nestedBinaryExpressions": false,
        "returnAssign": false
      }
    ],
    "no-template-curly-in-string": [0],
    "no-div-regex": [0],
    "vars-on-top": 0,
    "no-implicit-coercion": [
      2,
      {
        "boolean": false,
        "number": true,
        "string": true,
        "allow": []
      }
    ],
    "no-implicit-globals": [2],
    "no-return-await": [2],
    "no-unmodified-loop-condition": [0],
    "no-useless-call": [2],
    "eqeqeq": [2, "smart"],
    "no-eval": [0],
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "none"
    }],
    "no-shadow": [0],
    "callback-return": [2],
    "handle-callback-err": [2],
    "no-process-env": [0],
    "global-require": 0,
    "comma-dangle": [0],
    "max-len": [2, 100, 2, {
      "ignoreComments": true,
      "ignoreTrailingComments": true,
      "ignoreUrls": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "func-names": [0, "never"],
    "no-underscore-dangle": [0],
    "quotes": [0],
    "no-param-reassign": [0],
    "one-var": [0],
    "padded-blocks": [0],
    "react/require-extension": [0],
    "spaced-comment": [0],
    "space-before-function-paren": [0],
    "no-class-assign": [0], 
    "no-const-assign": [0],       
    "no-dupe-class-members": [0], 
    "no-duplicate-imports": [0],
    "no-new-symbol": [0],
    "no-restricted-imports": [0],
    "no-useless-constructor": [0], 
    "no-var": [2],                 
    "prefer-const": [0],           
    "prefer-numeric-literals": [0],
    "prefer-template": [0],
    "require-yield": [0],
    "template-curly-spacing": [0],
    "prefer-arrow-callback": 0,
    "prefer-rest-params": [0],
    "import/no-extraneous-dependencies": [0],
    "import/no-dynamic-require": [0],
    "vue/x-invalid-end-tag": [0],
    "vue/no-parsing-error": [0]
  },
  "globals": {
    "wx": true
  }
}
