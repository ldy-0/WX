      <view class='tuan_img'>
        <image style='width: 50rpx; height: 50rpx;' src='../images/icon/tuan.png' wx:if='{{true}}' />
      </view>
      <image class='coupon_img' src='{{coupon.goods_image}}' />
      <view class='info'>
        <view class='coupon_title'>{{coupon.goods_name}}</view>
