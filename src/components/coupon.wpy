      </view>
    </view>
    <view class='coupon_sale'>已售{{coupon.goods_salenum}}</view>
    <view class='pay_btn no' wx:if='{{showBuy && canBuy === false}}'>购买</view>
    <view class='pay_btn' catchtap="goSubmitOrder({{coupon.goods_commonid}})" wx:if='{{showBuy && canBuy}}'>购买</view>
  </view>
</template>
<script>
import wepy from 'wepy';

export default class Coupon extends wepy.component {
  props = {
    coupon: Object,
    canRedirect: Boolean,
    canBuy: Boolean,
    showBuy: Boolean,
  }

  components = {
  }

  data = {

  }

  onLoad() {
  
  }

  methods = {
    goGoodsDetail(id){

      if(id !== ''){
        wx.navigateTo({
          url: '/pages/food/goodsDetail?id=' + id,
        });
      }

    },
    goSubmitOrder(id){
      if(id !== ''){
        wx.navigateTo({
          url: '/pages/food/submitOrder?id=' + id,
        });
      }

    },
  }
  
}

</script>
