<template>
  <view class="container">
    <topBar :config='config'></topBar>
    
    <view class='wrap '>
      <view class='assess'>
        <view class='level'>
          <star :level.sync='level' :config.sync='starConfig'></star>
          <text class='level_desc'>{{level}}</text>
        </view>

        <img :size='imgNumber' :activeSize.sync='activeSize'></img>
        <!-- <view class='imgs_wrap'>
          <repeat for='{{3}}' item='item'>
            <image src='' />
          </repeat>
        </view> -->

        <view class='assess_info'>
          <textarea maxlength='50' value='{{content}}' bindinput='setContent' placeholder='图片最多上传三张' placeholder-style='color: #c0c0c0;'></textarea>
          <view class='desc'>最多输入50个字</view>
        </view>
      </view>

      <view class='btn' @tap='submit'>去评价</view>

      <view class='desc'>评价有助于商家完善其服务，您也可以取得更好的服务！</view>
    </view>
  </view>
</template>
<script>
import wepy from 'wepy';
import topBar from '../../components/topBar';
import star from '../../components/star';
import img from '../../components/img';
import api from '../../utils/api.js';

export default class Authorize extends wepy.page {
  config = {
    enablePullDownRefresh: false,
    disableScroll: true,
  }

  components = {
    topBar,
    star,
    img,
  }

  data = {
    config: {
      isLeft: true,
      name: '',
      canBack: true,
    },
    starConfig: {
      level: 0,
      size: 48,
      canModify: true,
      src: '../../images/icon/star.png',
      sel_src: '../../images/icon/star_sel.png',
    },
    level: 0,
    imgNumber: 2,
    activeSize: 0,
    content: '',
    order: null,
  }

  onLoad(params) {
    let order = JSON.parse(decodeURIComponent(params.order));
    this.order = order; 
    this.config.name = order.store_name;
  }

  methods = {
    setContent(e){
      this.content = e.detail.value;
      return this.content;
    },
    async submit(){
      
      if(this.content === ''){
        return wx.showModal({ title: '提示', content: '评价内容不能为空!', showCancel: false, });
      }

      let res = await api.assess({
        goods_id: this.order.order_goods[0].goods_id,
        order_id: this.order.id,
        order_no: this.order.order_sn, 
        image: ['https://sf', 'http://'],
        content: this.content,
        score: this.level,
      });

      res ? wx.showModal({ title: '提示', content: '添加成功!', showCancel: false, }) : void(0);

    },
  }
  
}

</script>
